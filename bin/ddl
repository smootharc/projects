#!/bin/bash

if [[ $1 =~ ^[[:digit:]]+$ ]]; then

    find ~/Downloads -mindepth 1 -cmin +"$1" -delete 2> /dev/null

else

    echo -e "\nUsage: $(basename $0) M\n\nM must be an integer greater than or equal to zero.  No files deleted.\n"			

fi

find ~/Downloads -mindepth 1 -empty -delete 2> /dev/null
