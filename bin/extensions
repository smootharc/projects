#!/usr/bin/env bash

if test "$#" -ne 1; then

    printf "\nUsage: %s filetype\n\n" $(basename $0)
    exit 1

fi

#awk -v search=video '$1 ~ search && NF > 1 { for ( i = 2; i <=  NF; i++ ) { output = output$i"|" } } END { printf "%s",  substr(output, 1, length(output) - 1) }' /etc/mime.types

grep "$1" /etc/mime.types | tr -s "\t" | cut -s -f 2 | tr " " "\n" | tr "\n" "|" | sed 's/|$//'
