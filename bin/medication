#!/usr/bin/python

import click
import tabulate
import sqlite3
import os

dbfile = os.path.expanduser("~/Documents/.medical.db")

db = sqlite3.connect(dbfile)

db.execute('pragma foreign_keys = on')

def list_medications():

        meds = db.execute("select * from medication order by name")
        
        print(tabulate.tabulate(meds, tablefmt='simple', headers=['Name', 'Comment']))

@click.command()
@click.option('--add', '-a', nargs=2)
@click.option("--delete", "-d", nargs=1)
def medication(add, delete):

    '''List, add or delete medications from the dose database.'''          

    if len(add) == 2: 
        
        sql = '''insert into medication (name, comment) values( ?, ? )'''

        try:

            with db:

                db.execute(sql, add)

        except sqlite3.IntegrityError as e:

            click.echo(f'Medication already exists.')

            exit(1)

        except sqlite3.Error as e:

            click.echo(f'Failed to add medication: {e}')

            exit(1)        

        click.echo(f'Added {add[0]} to medication table')

        exit(0)

    if delete:

        sql = '''delete from medication where name = ?'''

        id_tuple = (delete,)

        try:

            with db:

                db.execute(sql, id_tuple)

        except sqlite3.IntegrityError as e:

            if 'FOREIGN' in str(e):

                click.echo(f"Can't delete medication {id_tuple[0]}. It is being used.")

            else:

                click.echo(f'{e}')

            exit(1)

        except sqlite3.Error as e:

            click.echo(f'{e}')

            exit(1)        

        click.echo(f'Deletion of medication {delete} succeeded.')

        exit(0)

 
    list_medications()       

if __name__ == '__main__':
    medication()